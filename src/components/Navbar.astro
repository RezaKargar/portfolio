---
import { navItems } from '../utils/navigation'
---

<nav
  role='navigation'
  aria-label='navigation'
  id='top-nav'
  class='mx-auto flex flex-col items-center gap-4 pt-8 pb-8 w-fit md:flex-row md:justify-center md:my-0 sticky md:static top-0'
>
  <ul
    class='flex items-center justify-center gap-4 rounded-full bg-slate-950 px-8 py-4'
  >
    {
      navItems.map((navItem) => (
        <li>
          <a
            href={navItem.route}
            class='relative font-medium text-primary-purple before:absolute before:-bottom-1 before:h-0.5 before:w-full before:scale-x-0 before:bg-primary-purple before:transition hover:before:scale-x-100'
          >
            {navItem.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
