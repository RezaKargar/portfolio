---
import { Icon } from 'astro-icon'

export interface Props {
  showLink: boolean
}

const { showLink } =
  Astro.props
---

<hr class={`${showLink ? 'my-4' : 'my-10'} md:my-4 mx-auto w-[350px] border-t-2 border-t-neutral-400 md:w-[750px]`} />

<footer aria-label='Site Footer' class='px-10 text-center'>
  {showLink ? <div class='mx-auto max-w-screen-xl px-4 py-4 sm:px-6 lg:px-8'>
    <div class='mx-auto max-w-3xl space-y-6'>
      <div class='flex justify-center gap-6'>
        <a
          class='text-primary-purple hover:text-primary-purple/75'
          href='https://twitter.com/RezaKargar___'
          target='_blank'
          rel='noreferrer'
          aria-label='Twitter'
        >
          <Icon name="twitter" />
        </a>

        <a
          class='text-primary-purple hover:text-primary-purple/75'
          href='https://github.com/RezaKargar'
          target='_blank'
          rel='noreferrer'
          aria-label='GitHub'
        >
          
        <Icon name="github" />
        </a>

        <a
          class='text-primary-purple hover:text-primary-purple/75'
          href='https://www.linkedin.com/in/RezaKargar/'
          target='_blank'
          rel='noreferrer'
          aria-label='LinkedIn'
        >
          <Icon name="linkedin" />
        </a>
        <a
          class='text-primary-purple hover:text-primary-purple/75'
          href='mailto:r.kargar.2014@gmail.com'
          target='_blank'
          rel='noreferrer'
          aria-label='Dribbble'
        >
          <Icon name="mail" />
        </a>
      </div>
    </div>
  </div>
  : ''}

  <p class='mx-auto flex max-w-lg items-center justify-center gap-x-1 text-xs mb-4'>
    Created by Reza Kargar with <Icon
      name='heart'
      class='h-6 w-6 text-primary-purple'
    />
  </p>
</footer>
